#! This tests the Adaptive-CI procedure using energy selection

import libbtl
import libadaptive

refscf = -2.03108138291133 #TEST
refaci = -2.114564415546 #TEST
refacipt2 = -2.116206352800 #TEST

molecule li2{
0 1
H -0.4  0.0 0.0
H  0.4  0.0 0.0
H  0.1 -0.3 1.0
H -0.1  0.5 1.0
}

set {
  basis cc-pVDZ
  e_convergence 10
  d_convergence 10
  r_convergence 10
  scf_type pk
}

set libadaptive {
  SELECT_TYPE amps
  TAUP 0.005000
  TAUQ 0.001000
  nroot 1
  charge 0
}

energy('aci')

compare_values(refscf, get_variable("SCF total energy"),9, "SCF energy") #TEST
compare_values(refaci, get_variable("ACI ENERGY"),9, "ACI energy") #TEST
compare_values(refacipt2, get_variable("ACI+PT2 ENERGY"),9, "ACI+PT2 energy") #TEST
