#
#This tests the EX-CI procedure using energy selection

import libadaptive

refscf = -14.839846512738 #TEST
refaci = -14.8797641587 #TEST
refacipt2 = -14.889463445 #TEST

molecule li2{
   Li
   Li 1 2.0000
}

set {
  basis DZ
  e_convergence 10
  d_convergence 10
  r_convergence 10
  reference rhf
  docc = [2,0,0,0,0,1,0,0]
}

set libadaptive {
  SELECT_TYPE energy
  perturb_select false
  pq_function average
  excited_algorithm root_select
  ref_root 0
  TAUP 0.000100
  TAUQ 0.001000
  nroot 2
  charge 0
}

energy('ex-aci')

compare_values(refscf, get_variable("SCF total energy"),9, "SCF energy") #TEST
compare_values(refaci, get_variable("EX-ACI ENERGY"),9, "EX-ACI energy") #TEST
compare_values(refacipt2, get_variable("EX-ACI+PT2 ENERGY"),8, "EX-ACI+PT2 energy") #TEST
