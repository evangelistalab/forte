#! This tests the Adaptive-CI procedure using energy selection
#! Generated using commit GITCOMMIT
# Tests aimed energy and relative energy criteria, with post-spin projection

import forte

refscf = -14.839846512738 #TEST
refaci = -14.8829305594 #TEST
refacipt2 = -14.889437076 #TEST

molecule li2{
0 1
   Li
   Li 1 2.0000
}

set {
  basis DZ
  e_convergence 10
  d_convergence 10
  r_convergence 10
  docc = [2,0,0,0,0,1,0,0]
  reference rhf
}


set forte {
  job_type = ex-aci
  multiplicity 1
  SELECT_TYPE aimed_energy
  perturb_select false
  excited_algorithm state_average
  q_rel true
  q_reference adjacent
  pq_function average
  TAUP 0.01000
  TAUQ 0.01000
  nroot 3
  charge 0
  spin_projection 2
}

energy('scf')
energy('forte')

compare_values(refscf, get_variable("SCF total energy"),9, "SCF energy") #TEST
compare_values(refaci, get_variable("EX-ACI ENERGY"),9, "EX-ACI energy") #TEST
compare_values(refacipt2, get_variable("EX-ACI+PT2 ENERGY"),8, "EX-ACI+PT2 energy") #TEST
