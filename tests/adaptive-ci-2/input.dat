#! This tests the Adaptive-CI procedure using energy selection

import libbtl
import libadaptive

refscf = -14.839846512738 #TEST
refaci = -14.888681221669 #TEST
refacipt2 = -14.890314474716 #TEST

molecule li2{
   Li
   Li 1 2.0000
}

set {
  basis DZ
  e_convergence 10
  d_convergence 10
  r_convergence 10
}

set mcscf {
  reference rhf
  docc = [2,0,0,0,0,1,0,0]
}

set libadaptive {
  frozen_docc = [0,0,0,0,0,0,0,0]
  SELECT_TYPE energy
  TAUP 0.001000
  TAUQ 0.00001000
  nroot 1
  charge 0
}

energy('mcscf')
energy('aci')

compare_values(refscf, get_variable("SCF total energy"),9, "SCF energy") #TEST
compare_values(refaci, get_variable("ACI ENERGY"),9, "ACI energy") #TEST
compare_values(refacipt2, get_variable("ACI+PT2 ENERGY"),9, "ACI+PT2 energy") #TEST
