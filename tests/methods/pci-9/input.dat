#! This tests the Adaptive Path-Integral FCI procedure with dynamic prescreening
#! Generated using commit GITCOMMIT

import forte

refscf = -14.6097447380899563 #TEST
refpci = -14.515843559047 #TEST

molecule li2{
   Li
   Li 1 2.0000
}

set {
  basis sto-3g
  scf_type pk
  e_convergence 12
}

set forte {
  active_space_solver pci
  nroot 2
  PCI_GENERATOR dl
  pci_spawning_threshold 0.0001
  pci_e_convergence 8
  PCI_STOP_HIGHER_NEW_LOW true
  DL_MAXITER 1000
}

energy('scf')
compare_values(refscf, variable("CURRENT ENERGY"), 10, "SCF energy") #TEST

energy('forte')
compare_values(refpci, variable("PCI ENERGY"), 6, "PCI excited state energy") #TEST
